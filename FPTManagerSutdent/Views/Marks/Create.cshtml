@model FPTManagerSutdent.Models.Mark

@{
    ViewData["Title"] = "Create";
    var listStudent = ViewData["StudentId"] as List<Student>;
    var listCourse = ViewData["CourseId"] as List<Course>;

}

<h2>Thêm điểm</h2>

<h4>Mark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Theory" class="control-label"></label>
                <input asp-for="Theory" class="form-control" />
                <span asp-validation-for="Theory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Practice" class="control-label"></label>
                <input asp-for="Practice" class="form-control" />
                <span asp-validation-for="Practice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment" class="control-label"></label>
                <input asp-for="Assignment" class="form-control" />
                <span asp-validation-for="Assignment" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Course" class="control-label"></label>
                <select asp-for="CourseId" class="form-control">
                    @foreach (var course in listCourse)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            
            <div>
                <label asp-for="Student" class="control-label"></label>
                <select asp-for="StudentId" class="form-control">
                    @foreach (var student in listStudent)
                    {
                        <option value="@student.Id">@student.Name</option>
                    }
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            
      
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
