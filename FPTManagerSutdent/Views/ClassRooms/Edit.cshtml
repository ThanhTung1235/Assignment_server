@model FPTManagerSutdent.Models.ClassRoom

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="card m-t-30">
    <div class="card-header">
        Sửa thông tin lớp học
        <div class="create pull-right" style="text-align: right">
            <p>
                <a asp-action="Index"><span class="glyphicon glyphicon-plus"></span>Back to List</a>
            </p>
        </div>
    </div>
    <div class="card-body card-block">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row form-group">
                <div class="col col-md-3">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-12 col-md-9">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-12 col-md-9">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="pull-right">
                <input type="submit" value="Save" class="btn btn-primary btn-cus" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
