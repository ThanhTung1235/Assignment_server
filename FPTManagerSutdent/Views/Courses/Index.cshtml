@model IEnumerable<FPTManagerSutdent.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Danh sách các môn học</h2>

<div class="create" style="text-align: right">
    <p>
        <a asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Thêm mới</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên môn học
            </th>          
            <th>
                Thông tin môn học
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @foreach (var cr in item.ClassRoomCourses)
                {
                    @cr.Course.Name
                }
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
