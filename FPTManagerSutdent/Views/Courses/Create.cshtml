@model FPTManagerSutdent.Models.Course

@{
    ViewData["Title"] = "Create";
    var course = ViewData["course"] as List<ClassRoom>;
}

<div class="card m-t-30">
    <div class="card-header">
        Tạo mới môn học
        <div class="create  pull-right" style="text-align: right">
            <p>
                <a asp-action="Index"><span class="glyphicon glyphicon-plus"></span>Back to List</a>
            </p>
        </div>
    </div>
    <div class="card-body card-block">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label asp-for="Name" class=" form-control-label"></label>
                </div>
                <div class="col-12 col-md-9">
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label asp-for="ClassRoomCourses" class="control-label"></label>
                </div>
                <div class="col col-md-9">
                    @foreach (var c in course)
                    {
                        <div class="form-check">
                            <div class="checkbox">
                                <label for="checkbox1" class="form-check-label ">
                                    <input type="checkbox" id="checkbox1" name="courseId[]" value="@c.Id" class="form-check-input">@c.Name
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label asp-for="Description" class=" form-control-label"></label>
                </div>
                <div class="col-12 col-md-9">
                    <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class=" pull-right">
                <button type="submit" class="btn btn-primary btn-cus">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <button type="reset" class="btn btn-danger btn-cus">
                    <i class="fa fa-ban"></i> Reset
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
