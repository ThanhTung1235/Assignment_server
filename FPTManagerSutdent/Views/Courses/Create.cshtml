@model FPTManagerSutdent.Models.Course

@{
    ViewData["Title"] = "Create";
    var course = ViewData["course"] as List<ClassRoom>;
}

<h2>Tạo mới mon học</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="ClassRoomCourses" class="control-label"></label>
                <ul>
                    @foreach (var c in course)
                    {
                        <li><input type="checkbox" value="@c.Id" name="courseId[]"/> @c.Name</li>
                    }
                   
                </ul>

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
