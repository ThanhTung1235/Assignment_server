@model IEnumerable<FPTManagerSutdent.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row m-t-30">
    <div class="col-md-12">
        <div>
            Danh sách sinh viên
            <div class="create pull-right" style="text-align: right">
                <p>
                    <a asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Thêm mới</a>
                </p>
            </div>
        </div>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>Tên sinh viên</th>
                        <th>Email</th>
                        <th>Giới tính</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Ngày sinh</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow">
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <span class="block-email">@Html.DisplayFor(modelItem => item.Email)</span>
                            </td>
                            <td class="desc">@Html.DisplayFor(modelItem => item.Gender)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>
                                <span class="status--process">@Html.DisplayFor(modelItem => item.Address)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.DoB)</td>
                            <td>
                                <div class="table-data-feature">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="item" data-original-title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="item" data-original-title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="item"  data-original-title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>

<div id="pageNavPosition" style="padding-top: 20px" align="right">
</div>
<script type="text/javascript">
    var pager = new Pager('tablepaging', 10);
    pager.init();
    pager.showPageNav('pager', 'pageNavPosition');
    pager.showPage(1);
</script>